# Local development Dockerfile for monorepo
FROM golang:1.21-alpine

RUN apk add --no-cache git make

WORKDIR /app

# Copy the entire monorepo context
COPY packages /packages
COPY services/generator /app

# Update go.mod to use local packages
RUN go mod download

# Build the binary
RUN go build -o generator ./cmd/generator || go build -o generator ./cmd || go build -o generator .

# Expose ports
EXPOSE 8083 9090

# Run the binary
CMD ["./generator"]