# Local development Dockerfile for monorepo
FROM golang:1.21-alpine

RUN apk add --no-cache git make

WORKDIR /app

# Copy the entire monorepo context
COPY packages /packages
COPY services/controller /app

# Update go.mod to use local packages
RUN go mod download

# Build the binary
RUN go build -o controller ./cmd/controller || go build -o controller ./cmd || go build -o controller .

# Expose ports
EXPOSE 8082 9090

# Run the binary
CMD ["./controller"]