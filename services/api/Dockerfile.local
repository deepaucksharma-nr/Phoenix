# Local development Dockerfile for monorepo
FROM golang:1.21-alpine

RUN apk add --no-cache git make

WORKDIR /app

# Copy the entire monorepo context
COPY packages /packages
COPY services/api /app

# Update go.mod to use local packages
RUN go mod download

# Build the binary
RUN go build -o api ./cmd/api || go build -o api ./cmd || go build -o api .

# Expose ports
EXPOSE 8080 8081 9090

# Run the binary
CMD ["./api"]