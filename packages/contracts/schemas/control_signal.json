{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Phoenix Control Signal",
  "type": "object",
  "required": ["version", "mode", "timestamp", "thresholds"],
  "properties": {
    "version": {
      "type": "string",
      "pattern": "^v[0-9]+\\.[0-9]+\\.[0-9]+$",
      "description": "Schema version"
    },
    "mode": {
      "type": "string",
      "enum": ["conservative", "balanced", "aggressive"],
      "description": "Current optimization mode"
    },
    "timestamp": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp of signal generation"
    },
    "thresholds": {
      "type": "object",
      "required": ["conservative_max", "aggressive_min"],
      "properties": {
        "conservative_max": {
          "type": "integer",
          "minimum": 0,
          "description": "Maximum time series for conservative mode"
        },
        "aggressive_min": {
          "type": "integer",
          "minimum": 0,
          "description": "Minimum time series for aggressive mode"
        }
      }
    },
    "metrics": {
      "type": "object",
      "properties": {
        "current_cardinality": {
          "type": "integer",
          "minimum": 0,
          "description": "Current estimated cardinality"
        },
        "cpu_utilization": {
          "type": "number",
          "minimum": 0,
          "maximum": 1,
          "description": "Current CPU utilization (0-1)"
        },
        "memory_utilization": {
          "type": "number",
          "minimum": 0,
          "maximum": 1,
          "description": "Current memory utilization (0-1)"
        }
      }
    },
    "reason": {
      "type": "string",
      "description": "Human-readable reason for mode selection"
    }
  }
}