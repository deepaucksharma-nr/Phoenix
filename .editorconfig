# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# Go files
[*.go]
indent_style = tab
indent_size = 4

# Python files
[*.py]
indent_size = 4

# Makefiles
[{Makefile,*.mk}]
indent_style = tab

# YAML files
[*.{yml,yaml}]
indent_size = 2

# JSON files
[*.json]
indent_size = 2

# JavaScript/TypeScript files
[*.{js,jsx,ts,tsx}]
indent_size = 2

# Shell scripts
[*.sh]
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false

# Protocol Buffers
[*.proto]
indent_size = 2

# Dockerfile
[Dockerfile*]
indent_size = 4

# Git files
[.git*]
indent_size = 2