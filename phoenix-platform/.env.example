# Phoenix Platform Environment Configuration
# Copy this file to .env and fill in your values

# Database Configuration
DATABASE_URL=postgres://phoenix:phoenix@localhost:5432/phoenix?sslmode=disable
REDIS_URL=redis://localhost:6379/0

# Authentication
JWT_SECRET=your-secret-key-here-change-in-production
JWT_EXPIRY=24h

# New Relic Configuration
NEW_RELIC_API_KEY=your-new-relic-api-key
NEW_RELIC_OTLP_ENDPOINT=https://otlp.nr-data.net:4317
NEW_RELIC_ACCOUNT_ID=your-account-id

# Git Integration (for GitOps)
GIT_TOKEN=your-git-token
GIT_REPO_URL=https://github.com/your-org/phoenix-configs.git
GIT_USER_EMAIL=phoenix@example.com
GIT_USER_NAME=Phoenix Bot

# Prometheus Configuration
PROMETHEUS_URL=http://localhost:9090
PROMETHEUS_REMOTE_WRITE_ENDPOINT=http://prometheus:9090/api/v1/write

# Service Ports
API_PORT=8080
API_GRPC_PORT=9090
CONTROLLER_PORT=8081
CONTROLLER_GRPC_PORT=9091
GENERATOR_PORT=8082
GENERATOR_GRPC_PORT=9092

# Kubernetes Configuration
KUBERNETES_NAMESPACE=phoenix-system
IN_CLUSTER_CONFIG=false

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Metrics
METRICS_PORT=9100
ENABLE_METRICS=true

# Development Settings
DEV_MODE=true
ENABLE_SWAGGER=true
ENABLE_PLAYGROUND=true

# ArgoCD Configuration
ARGOCD_SERVER=argocd.example.com
ARGOCD_TOKEN=your-argocd-token

# Feature Flags
ENABLE_VISUAL_BUILDER=true
ENABLE_AB_TESTING=true
ENABLE_CHAOS_ENGINEERING=false

# Resource Limits
MAX_EXPERIMENTS_PER_USER=10
MAX_PIPELINE_COMPLEXITY=100
MAX_NODES_PER_EXPERIMENT=1000

# Webhook Configuration (optional)
WEBHOOK_URL=
WEBHOOK_SECRET=

# Observability
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317
OTEL_SERVICE_NAME=phoenix-platform
ENABLE_TRACING=true

# Service Discovery (for docker-compose)
EXPERIMENT_ADDR=experiment-controller:50051
GENERATOR_ADDR=config-generator:50052
CONTROLLER_ADDR=control-service:50053

# NATS Event Bus
NATS_URL=nats://localhost:4222
NATS_CLUSTER_ID=phoenix-cluster

# Dashboard
VITE_API_URL=http://localhost:8080

# Process Simulator
SIMULATOR_METRICS_ENDPOINT=http://prometheus:9090/api/v1/write
SIMULATOR_PROCESS_COUNT=1000