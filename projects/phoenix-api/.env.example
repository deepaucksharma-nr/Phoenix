# Phoenix API Environment Configuration
# Copy this file to .env and update with your values

# Environment (development, staging, production)
ENVIRONMENT=development

# Server Configuration
PORT=8080

# Database Configuration
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=phoenix
DATABASE_USER=phoenix
DATABASE_PASSWORD=phoenix
DATABASE_SSL_MODE=disable

# External Services
PROMETHEUS_URL=http://localhost:9090
PUSHGATEWAY_URL=http://localhost:9091

# Security
JWT_SECRET=your-secret-key-here

# Features
USE_PUSHGATEWAY=false

# Cost Configuration (per month)
COST_METRICS_PER_MILLION=50.0   # $50 per million metrics
COST_STORAGE_PER_GB=10.0        # $10 per GB storage
COST_CPU_PER_CORE=100.0         # $100 per CPU core
COST_MEMORY_PER_GB=20.0         # $20 per GB memory

# Timeouts
AGENT_POLL_TIMEOUT=30s          # Agent long-polling timeout
TASK_ASSIGN_TIMEOUT=5m          # Task assignment timeout
HEARTBEAT_INTERVAL=1m           # Agent heartbeat interval